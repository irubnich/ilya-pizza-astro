---
import BaseLayout from '../layouts/BaseLayout.astro'
import Gallery from '../components/Gallery.tsx'
import PrismicContentRetriever from '../PrismicContentRetriever.ts'

const retriever = new PrismicContentRetriever()
const images = await retriever.getImages()
---

<BaseLayout title="photos">
	<main>
		<h2 class="text-2xl font-bold">i take photos</h2>
		<h3 class="text-xl mb-10">here are a few</h3>
		<Gallery client:load images={images} />
	</main>
</BaseLayout>
