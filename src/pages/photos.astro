---
import BaseLayout from '../layouts/BaseLayout.astro'

import fs from 'fs'

const path = './public/assets/img/gallery'
const images = fs.readdirSync(path)
---

<BaseLayout title="photos">
	<main>
		<h2 class="text-2xl font-bold">i take photos</h2>
		<h3 class="text-xl mb-10">here are a few</h3>
		<section class="grid grid-cols-1 md:grid-cols-2 gap-4">
			{images.map(img => {
				return (
					<a href={`${path}/${img}`}>
						<img src={`${path}/${img}`} />
					</a>
				)
			})}
		</section>
	</main>
</BaseLayout>
